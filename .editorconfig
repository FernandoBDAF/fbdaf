# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JS/TS files
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown
[*.md]
max_line_length = 120
trim_trailing_whitespace = false





